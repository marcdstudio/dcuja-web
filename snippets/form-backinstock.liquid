<div
  class="w-full"
  data-variant="{{ current_variant.id }}"
  data-component="backinstock">
  <form class="js-formbis relative flex items-center justify-between mt-10 rounded-[1rem] border border-black border-solid bg-white text-black w-full">
    <input
      class="js-email w-full flex p-[1.4rem]"
      type="text"
      placeholder="Email Address">
    <button type="submit" class="btn js-bis is-black is-rect is-small absolute right-2 top-1/2 -translate-y-1/2">
      {{ settings.bis_cta | default: 'Notify Me' }}
    </button>
  </form>
  <div class="hidden js-success text-center w-full p-20 rounded-10 border border-solid border-black bg-egg text-black{% unless bistype == 'quick' %} mt-10{% endunless %}">Success! We'll notify you when it's back.</div>
</div>

{% assign bistype = 'null' %}

{% comment %}
  <div
  class=""
  data-variant="{{ current_variant.id }}"
  data-component="backinstock">
  <div class="js-biswrap fixed z-[999999] top-0 left-0 w-screen h-screen bg-[rgba(0,0,0,.5)] backdrop-blur-xl flex items-center justify-center p-15 hidden">
  <div class="w-full max-w-[50rem] bg-cream text-black p-20 rounded-[1rem] border border-solid border-black">
  <div class="js-biscontent">
  <h2 class="title-large mb-25">Get notified when it's back in stock:</h2>
  <form class="js-formbis relative flex items-center justify-between mt-10 rounded-[1rem] border border-black border-solid bg-white text-black w-full">
  <input
  class="js-email w-full flex p-20 m:p-[1.4rem]"
  type="text"
  placeholder="Email Address">
  <button
  type="submit"
  class="btn js-bis is-black is-rect absolute right-2 top-1/2 -translate-y-1/2"
  data-component="submit">
  {{ settings.bis_cta | default: 'Notify Me' }}
  </button>
  </form>
  </div>
  <div class="hidden js-success p-20 text-center">Success! We'll notify you when it's back in stock.</div>
  </div>
  <button class="js-closebis w-40 h-40 rounded-full border border-solid borer-black flex items-center p-10 absolute top-20 right-20 bg-cream text-black">{% include 'icon-close' %}</button>
  </div>

  <button class="js-openbis w-full btn is-rect text-center is-black mt-10">Get Notified</button>
  </div>
{% endcomment %}