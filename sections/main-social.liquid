{% assign stngs = section.settings %}
<div class="w-full relativeoverflow-hidden">
  <div class="w-full bg-secondary py-60" data-component="social">
    <div class="js-carousel m:z-2 w-full overflow-hidden">
      <div class="flex select-none w-full relative">
        {% for block in section.blocks %}
          <a
            href="{{ block.settings.link }}"
            target="_blank"
            rel="noreferrer noopener"
            class="w-[60%] min-w-[60%] h-[40rem] relative mr-10 p-20 bg-cream rounded-[1.5rem] m:rounded-[2rem] flex gap-20">
            <div class="block w-[36rem] h-[36rem] relative rounded-[1.5rem] m:rounded-[2rem] overflow-hidden translate-x-0 flex-shrink-0">
              {%
                include 'lazy' with className: 'h-full w-full object-cover absolute top-0 left-0'
                , src: block.settings.image
                , size: '800x' %}
            </div>
            <div class="flex flex-col justify-between py-20">
              <div>
                <div class="title-sm">{{ section.settings.title }}</div>
                <div class="title-2xl mt-5">{{ block.settings.title }}</div>
              </div>
              <div class="text-24 leading-115">{{ block.settings.body }}</div>
              <div class="absolute top-40 right-20 title-sm">{{ block.settings.caption }}</div>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<div class="text-secondary rotate-180">
  {% include 'icon-wave' %}
</div>

{% schema %}
  {
    "name": "Social",
    "tag": "section",
    "class": "mb-90",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Card Title"
      }
    ],
    "blocks": [
      {
        "name": "Image",
        "type": "image",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "caption",
            "label": "Caption"
          },
          {
            "type": "richtext",
            "id": "body",
            "label": "Body"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Social"
      }
    ]
  }
{% endschema %}
