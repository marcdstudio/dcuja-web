<div class="z-[9] header fixed top-0 right-0 pr-15 m:pr-20 pt-15 m:pt-20 pl-15 m:pl-0 font-serif w-full m:w-[unset]" data-component="header">
  <div class="js-nav relative z-2 header-content bg-cream border border-solid border-primary rounded-[.5rem] pr-10 py-10 pl-10 m:pl-20 flex justify-between w-full">
    <div class="block m:hidden text-current transition-colors duration-300">
      <a
        href="/"
        class="block js-logo"
        aria-label="home">
        {% include 'icon-logotype' %}
      </a>
    </div>

    <ul
      class="hidden m:flex gap-20 items-center flex-shrink-0"
      role="list"
      tabindex="-1">
      {%- for link in section.settings.menu_main.links -%}
        <li class="link-nav relative">
          <a href="{{ link.url }}" class="flex items-center btn-nav relative js-link">

            <span>{{ link.title | escape }}</span>
            {% if link.links != blank %}
              <span class="w-[1rem] js-plusSub block ml-10 transition-transform duration-300">{%- include 'icon-plus' -%}</span>
            {% endif %}
          </a>
        </li>
      {%- endfor -%}

      <li class="">
        <button aria-label="toggle cart" class="js-cartToggle flex items-center gap-5 relative btn-cart link-nav">
          <span class="hidden m:block">Cart</span>
          <div>
            (<span class="js-cartCount">{{ cart.item_count }}</span>)
          </div>
        </button>
      </li>
    </ul>

    <div class="flex m:hidden gap-10 items-center">
      <button class="w-30 js-navToggle">
        <div class="w-30 js-open">
          {% include 'icon-menu-open' %}
        </div>
        <div class="w-30 js-close hidden">
          {% include 'icon-menu-close' %}
        </div>
      </button>
      <button aria-label="toggle cart" class="js-cartToggle flex m:hidden items-center gap-2 relative z-8 uppercase pt-3 btn-cart">
        <div>
          (<span class="js-cartCount">{{ cart.item_count }}</span>)
        </div>
      </button>
    </div>
  </div>
  <div
    class="flex-1 absolute top-[calc(var(--headerHeight)-2rem)] js-menu overflow-hidden w-[calc(100%-3rem)] border border-solid border-primary rounded-bl-[.5rem] rounded-br-[.5rem]"
    role="list"
    tabindex="-1">
    <div class="bg-cream px-15 pt-40 pb-15 h-menu w-full relative">
      <ul class="flex flex-col gap-10">
        {%- for link in section.settings.menu_main.links -%}
          <li class="nav-icon relative">
            <a href="{{ link.url }}" class="flex font-serif text-48 leading-100 uppercase">
              <span>{{ link.title | escape }}</span>
            </a>
          </li>
        {%- endfor -%}

        <li class="mt-10">
          <ul
            class="gap-20 items-center flex-shrink-0"
            role="list"
            tabindex="-1">
            <li class="font-serif uppercase mb-10">{{ section.settings.menu_social.title }}</li>
            {%- for link in section.settings.menu_social.links -%}
              <li class="relative">
                <a
                  href="{{ link.url }}"
                  class="text-24 js-link font-sans"
                  rel="noopener noreferrer"
                  target="_blank">
                  <span>{{ link.title | escape }}</span>
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </li>
      </ul>
      <div class="absolute bottom-0 left-0 px-15 pb-15 flex flex-col gap-20 w-full">
        <ul
          class="flex flex-col"
          role="list"
          tabindex="-1">
          {%- for link in section.settings.menu_social.links -%}
            <li class="relative">
              <a
                href="{{ link.url }}"
                class="text-24 js-link font-sans"
                rel="noopener noreferrer"
                target="_blank">
                <span>{{ link.title | escape }}</span>
              </a>
            </li>
          {%- endfor -%}
        </ul>
        <div class="flex justify-between items-center w-full">
          <div>{{ 'now' | date: '%Y' }} Â© D'Cuja</div>
          <a
            class="block link-line"
            href="https://marcd.co"
            target="_blank"
            rel="noopener noreferrer">Site Credits</a>
        </div>
      </div>
    </div>
  </div>
</div>

<button class="w-screen h-screen fixed left-0 top-0 js-menuClose hidden js-closeZone" aria-label="close menu"></button>

<div class="hidden m:block fixed z-9 top-0 left-0 pt-20 pl-20">
  <a
    href="/"
    class="block js-logo"
    aria-label="home">
    {% include 'icon-logotype' %}
  </a>
</div>


{% schema %}
  {
    "name": "header",
    "tag": "header",
    "class": "text-primary",
    "settings": [
      {
        "type": "link_list",
        "id": "menu_main",
        "label": "Desktop Menu"
      },
      {
        "type": "link_list",
        "id": "menu_social",
        "label": "Social Menu"
      },
      {
        "type": "link_list",
        "id": "menu_legal",
        "label": "legal Menu"
      }
    ]

  }
{% endschema %}
